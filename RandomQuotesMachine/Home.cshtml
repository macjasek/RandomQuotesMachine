@using WebMatrix.Data
@{
    Layout = null;




    var db = Database.Open("SQLServerConnectionString");
    var selectQueryString = "SELECT TOP 1 * FROM Quotes ORDER BY NEWID()";




    string randomQuote = "";
    string randomAuthor = "";
    int randomQuoteId;


    foreach (var row in db.Query(selectQueryString))
    {
        
        randomQuoteId = (int)row.Id;
        randomQuote = row.qoute;
        randomAuthor = row.author;

    }


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" initial-scale="1" />
    <title>Random Quote Machine</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    
    <section id="quote-panel">
        <h2>
            @randomQuote
        </h2>
        <p>
            @randomAuthor
        </p>

        <a href="#" class="special-button" onClick="window.location.reload()">New Quote</a>

    </section>

</body>
</html>
